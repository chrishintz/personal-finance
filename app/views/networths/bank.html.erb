<div class="container">
  <h2 class="question-text">You're Doing Great! <br> Let's Take Account Of What Money We Have In The Bank!</h1>
  <%= render :layout => 'form' do |f| %>
    <div class="question-block">
      <div>
        <label class="input-label"><%= f.label :checking_account, "Checking Accounts (all):" %></label>
        <div><%= f.text_field :checking_account, :value => @current_user.net_worth.checking_account %></div>
      </div>
      <div class="form-block">
        <label class="input-label"><%= f.label :savings_account, "Savings Accounts (all):" %></label>
        <%= f.text_field :savings_account, :value => @current_user.net_worth.savings_account %>
      </div>
      <div class="navigation-buttons">
        <input type="button" class="back-button" value="Back" onclick="history.back(-1)"></input>
        <%= f.submit "Continue", class: "continue-button" %>
      </div>
      <div class="center">
        <%= render :layout => 'sidebar' do |f| %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
